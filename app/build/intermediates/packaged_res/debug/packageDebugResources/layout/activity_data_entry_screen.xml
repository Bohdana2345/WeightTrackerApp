<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/data_entry_screen_bg"
    android:gravity="center"
    android:fitsSystemWindows="true"
    tools:context=".presentation.feature.DataEntryScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_weight_block"
        android:layout_width="@dimen/weight_block_width"
        android:layout_height="@dimen/weight_block_height"
        android:layout_marginTop="@dimen/weight_block_margin_top"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gliker_regular"
            android:text="@string/log_weight_journey"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/data_entry_headline_text_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
        />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <NumberPicker
                android:id="@+id/np_weight_input"
                android:layout_width="@dimen/number_picker_width"
                android:layout_height="@dimen/number_picker_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:theme="@style/DefaultNumberPickerTheme"
                app:layout_constraintBottom_toBottomOf="parent"
            />

            <TextView
                android:id="@+id/tv_weight_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight_unit"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/data_entry_units_text_size"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/data_entry_units_margin_start"
                app:layout_constraintStart_toEndOf="@id/np_weight_input"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
            />

            <Button
                android:id="@+id/b_save_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add"
                android:paddingTop="@dimen/save_button_padding_top"
                android:paddingBottom="@dimen/save_button_padding_bottom"
                android:paddingStart="@dimen/save_button_padding_start"
                android:paddingEnd="@dimen/save_button_padding_end"
                android:textSize="@dimen/data_entry_save_button_text_size"
                android:textColor="@color/white"
                android:fontFamily="@font/gliker_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/rounded_corner"
                app:layout_constraintBottom_toBottomOf="parent"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>