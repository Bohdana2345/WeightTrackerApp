<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-1dp"
    android:background="@drawable/record_border">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_record_block"
        android:layout_width="@dimen/record_block_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_record_block"
        android:layout_marginBottom="@dimen/margin_bottom_record_block"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_weight_output"
                android:layout_width="@dimen/weight_output_width"
                android:paddingStart="@dimen/weight_padding_start_text"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/weight_padding_bottom_text"
                android:text="@string/weight"
                android:textSize="@dimen/record_text_size_weight"
                android:fontFamily="@font/gliker_regular"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
            />

            <TextView
                android:id="@+id/tv_date_output"
                android:layout_width="@dimen/date_output_width"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:paddingEnd="@dimen/date_padding_end_text"
                android:paddingBottom="@dimen/date_padding_bottom_text"
                android:textSize="@dimen/record_text_size_date"
                android:textAlignment="center"
                android:textColor="@color/main_button_color"
                android:fontFamily="@font/gliker_regular"
                android:paddingStart="@dimen/date_padding_start_text"
                app:layout_constraintStart_toEndOf="@id/tv_weight_output"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>